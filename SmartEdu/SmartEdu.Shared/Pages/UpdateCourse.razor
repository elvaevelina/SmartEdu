@page "/updatecourse/{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using System.Net.Http.Json
@using SmartEdu.Shared.Models
@using SmartEdu.Shared.DTO
@using SmartEdu.Shared.Services
@using System.IO
@inject HttpClient Http
@inject NavigationManager Nav
@using System.Net.Http.Headers
@inject ICameraService CameraService

<div class="hero-section">
    <h1 class="system-title">SmartEdu</h1>
    <p class="system-subtitle">Hybrid Learning Management System for Modern Education</p>
</div>

@if (course == null)
{
    <p>Loading...</p>
}
else
{
    <div class="form-card">
        <h2 class="form-title">Edit Course</h2>
        <EditForm Model="course" OnValidSubmit="HandleUpdate">
            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label>Title</label>
                <InputText @bind-Value="course.Title" class="form-control" />
            </div>

            <div class="form-group">
                <label>Description</label>
                <InputTextArea @bind-Value="course.Description" class="form-control" />
            </div>

            <div class="form-group">
                <label>Duration (hours)</label>
                <InputNumber @bind-Value="course.DurationInHours" class="form-control" />
            </div>

            <div class="form-group">
                <label>Trainer ID</label>
                <InputNumber @bind-Value="course.TrainerId" class="form-control" />
            </div>
            <div class="form-group">
                <label>Course Image</label>

                <div class="course-image-container" style="margin-bottom: 10px; background-color: #f0f0f0; border-radius: 8px; overflow: hidden; width: 100%; height: 200px; display: flex; align-items: center; justify-content: center;">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@($"{ApiBaseUrl}/Uploads/{course.ImageUrl}")"
                             alt="Preview"
                             style="width: 100%; height: 100%; object-fit: cover;"
                             @onerror="e => course.ImageUrl = null" />
                    }
                    else
                    {
                        <span style="color: #999; font-style: italic;">No Image</span>
                    }
                </div>

                <div class="action-grid">
                    <label class="btn-action-white">
                        <i class="bi bi-folder2-open" style="margin-right: 8px;"></i>Choose File
                        <InputFile OnChange="HandleFileSelected" style="display: none;" />
                    </label>

                    <button type="button" class="btn-action-white" @onclick="HandleCameraCapture">
                        <i class="bi bi-camera" style="margin-right: 8px;"></i>Camera
                    </button>
                </div>

                @if (isUploading)
                {
                    <p style="color: blue; font-size: 0.9rem; margin-top: 5px;">Uploading image...</p>
                }
            </div>
  

            <button type="submit" class="btn-primary">Update</button>
            <button type="button" class="btn-cancel" @onclick="BackToHome">Cancel</button>
        </EditForm>
    </div>
}

@code {
    [Parameter]
    public int id { get; set; }

    private Course? course;
    private bool isUploading = false;
    private bool isSubmitting = false;
    private string? message;
    private string uploadStatusMessage = "";

    private string ApiBaseUrl = "https://localhost:7194";
    private IBrowserFile? selectedFile;

    private class UploadResult
    {
        public string FileName { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        course = await Http.GetFromJsonAsync<Course>($"api/Courses/{id}");
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        isUploading = true;
        message = string.Empty;
        selectedFile = e.File;

        if (selectedFile != null && course != null)
        {
            try
            {
                using var content = new MultipartFormDataContent();
                using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);

                content.Add(new StreamContent(fileStream), "file", selectedFile.Name);

                var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);

                if (response.IsSuccessStatusCode)
                {
                    var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                    if (result != null)
                    {
                        course.ImageUrl = result.FileName;
                        message = "New image uploaded successfully!";
                    }
                }
                else
                {
                    message = $"Error: Image upload failed. {response.ReasonPhrase}";
                }
            }
            catch (Exception ex)
            {
                message = $"Error: {ex.Message}";
            }
            finally
            {
                isUploading = false;
            }
        }
    }

    private async Task HandleCameraCapture()
    {
        try
        {
            var photoResult = await CameraService.TakePhotoAsync();
            if (photoResult != null)
            {
                Stream stream;
                if (photoResult.StartsWith("data:image"))
                {
                    var base64Data = photoResult.Split(',')[1];
                    var bytes = Convert.FromBase64String(base64Data);
                    stream = new MemoryStream(bytes);
                }
                else
                {
                    stream = File.OpenRead(photoResult);
                }

                using (stream)
                {
                    await UploadStreamAsync(stream, "camera_capture.jpg");
                }
            }
        }
        catch (Exception ex)
        {
            message = $"Camera Error: {ex.Message}";
        }
    }

    private async Task UploadStreamAsync(Stream imageStream, string fileName)
    {
        isUploading = true;
        uploadStatusMessage = "Uploading image to server...";
        message = string.Empty;

        try
        {
            using var content = new MultipartFormDataContent();
            var streamContent = new StreamContent(imageStream);
            content.Add(streamContent, "file", fileName);

            var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                if (result != null)
                {
                    // Update model course yang sedang diedit
                    course.ImageUrl = result.FileName;

                    uploadStatusMessage = "";
                    message = "Image uploaded successfully from Camera!";
                }
            }
            else
            {
                message = $"Error: File upload failed. {response.ReasonPhrase}";
                uploadStatusMessage = "";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            uploadStatusMessage = "";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task HandleUpdate()
    {
        isSubmitting = true;
        message = string.Empty;
        if (isUploading)
        {
            message = "Error: Please wait for the image upload to finish.";
            isSubmitting = false;
            return;
        }
        try
        {
            var response = await Http.PutAsJsonAsync($"api/Courses/{id}", course);
            if (response.IsSuccessStatusCode)
            {
                Nav.NavigateTo("/courses");
            }
            else
            {
                Console.WriteLine("Update failed");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"An error occurred: {ex.Message}");
        }
        finally
        {
            isSubmitting = false;
        }
    
    }

    private void BackToHome() => Nav.NavigateTo("/courses");
}
