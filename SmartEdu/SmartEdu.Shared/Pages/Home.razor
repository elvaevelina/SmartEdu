@page "/"
@inject NavigationManager Nav
@using System.Reflection;

<div class="hero-section">
    <h1 class="system-title">SmartEdu</h1>
    <p class="system-subtitle">Hybrid Learning Management System for Modern Education</p>
</div>

<div class="content-section" style="text-align: center; margin-top: 50px;">

    <h3 style="margin-bottom: 40px; color: #00334E;">Welcome, Select Menu</h3>

    <div class="action-grid" style="justify-content: center; gap: 30px; flex-wrap: wrap;">

        <div class="home-card" @onclick="GoToCourses">
            <div class="home-icon">📚</div>
            <h3>View Courses</h3>
            <p>Manage and browse available courses</p>
        </div>

        <div class="home-card" @onclick="GoToTrainers">
            <div class="home-icon">👨‍🏫</div>
            <h3>View Trainers</h3>
            <p>See our professional trainers list</p>
        </div>
    </div>

    <div style="margin-top: 60px; color: #B6BBC4; font-size: 0.9rem;">
        <p>App Version: <strong>@appVersion</strong></p>
        <p style="font-size: 0.8rem;">© 2025 SmartEdu System</p>
    </div>

</div>

@code {
    private string appVersion = "1.0.0";
    protected override void OnInitialized()
    {
        var version = Assembly.GetExecutingAssembly().GetName().Version;
        if (version != null)
        {
            appVersion = $"v{version.Major}.{version.Minor}.{version.Build}";
        }
    }

    private void GoToCourses()
    {
        Nav.NavigateTo("/courses");
    }

    private void GoToTrainers()
    {
        Nav.NavigateTo("/trainers");
    }

}