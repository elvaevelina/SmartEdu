@page "/addcourse"
@using System.Net.Http.Json
@using SmartEdu.Shared.Models
@using SmartEdu.Shared.DTO
@using SmartEdu.Shared.Services
@using System.IO
@inject HttpClient Http
@inject NavigationManager Nav
@using System.Net.Http.Headers
@inject ICameraService CameraService

<div class="hero-section">
    <h1 class="system-title">SmartEdu</h1>
    <p class="system-subtitle">Hybrid Learning Management System for Modern Education</p>
</div>

<div class="form-card">
    <h2 class="form-title">Add New Course</h2>

    <EditForm Model="@newCourse" FormName="AddCourseForm">
        <div class="form-group">
            <label>Course Title</label>
            <input type="text" class="form-input" placeholder="Enter Course Title" @bind="newCourse.Title" />
        </div>

        <div class="form-group">
            <label>Description</label>
            <textarea class="form-input" placeholder="Enter course description" @bind="newCourse.Description"></textarea>
        </div>

        <div class="form-group">
            <label>Duration (Hours)</label>
            <input type="number" class="form-input" placeholder="e.g. 12" @bind="newCourse.DurationInHours" />
        </div>

        <div class="form-group">
            <label>Trainer ID</label>
            <input type="number" class="form-input" placeholder="Enter trainer ID" @bind="newCourse.TrainerId" />
        </div>

        <div class="form-group">
            <label>Course Image</label>
            <div class="course-image-container">
                @if (!string.IsNullOrEmpty(newCourse.ImageUrl))
                {
                    <img src="@($"{ApiBaseUrl}/Uploads/{newCourse.ImageUrl}")"
                         alt="Preview" class="preview-img"
                         @onerror="@(e => { newCourse.ImageUrl = null; })" />
                }
                else
                {
                    <span class="empty-image-text">No Image Selected</span>
                }
            </div>

            <div class="action-grid">
                <label class="btn-action-white">
                    <i class="bi bi-folder2-open" style="margin-right: 8px;"></i>Choose File
                    <InputFile OnChange="HandleFileSelected" style="display: none;" />
                </label>

                <button type="button" class="btn-action-white" @onclick="HandleCameraCapture">
                    <i class="bi bi-camera" style="margin-right: 8px;"></i>Camera
                </button>
            </div>

            @if (isUploading)
            {
                <p class="status-uploading">@uploadStatusMessage</p>
            }
        </div>
        
        <div class="action-grid" style="margin-top: 20px;">
            <button type="button" class="btn-form-action btn-secondary-custom" @onclick='() => Nav.NavigateTo("/")'>
                Back
            </button>

            <button type="button" class="btn-form-action btn-primary-custom" @onclick="SaveCourse" disabled="@isSubmitting">
                @(isSubmitting ? "Processing..." : "Submit")
            </button>
        </div>

        @if (!string.IsNullOrEmpty(message))
        {
            <p class="form-message">@message</p>
        }
    </EditForm>
</div>


@code {
    private AddCourseDTO newCourse = new();
    private bool isSubmitting = false;
    private bool isUploading = false;
    private string? message;
    private string uploadStatusMessage = "";
    private IBrowserFile? selectedFile;

    private string ApiBaseUrl = "https://localhost:7194";
    private class UploadResult
    {
        public string FileName { get; set; }
    }
    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        isSubmitting = true;
        message = "Uploading file...";
        selectedFile = e.File;

        if (selectedFile != null)
        {
            try
            {
                using var content = new MultipartFormDataContent();
                using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);

                content.Add(new StreamContent(fileStream), "file", selectedFile.Name);

                var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);

                if (response.IsSuccessStatusCode)
                {
                    var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                    if (result != null)
                    {
                        newCourse.ImageUrl = result.FileName;
                        message = "File uploaded successfully: " + result.FileName;
                    }
                }
                else
                {
                    message = $"Error: File upload failed. {response.ReasonPhrase}";
                }
            }
            catch (Exception ex)
            {
                message = $"Error: {ex.Message}";
            }
            finally
            {
                isSubmitting = false;
            }
        }
    }

    private async Task HandleCameraCapture()
    {
        try
        {
            var photoResult = await CameraService.TakePhotoAsync();

            if (photoResult != null)
            {
                Stream stream;
                // Cek apakah hasil dari Web (Base64) atau Mobile (File Path)
                if (photoResult.StartsWith("data:image"))
                {
                    // Web: Convert Base64 ke MemoryStream
                    var base64Data = photoResult.Split(',')[1];
                    var bytes = Convert.FromBase64String(base64Data);
                    stream = new MemoryStream(bytes);
                }
                else
                {
                    // Mobile: Buka FileStream dari path lokal
                    stream = File.OpenRead(photoResult);
                }

                // Gunakan 'using' agar stream otomatis ditutup setelah upload selesai
                using (stream)
                {
                    // Upload stream tersebut ke server menggunakan fungsi yang sama dengan input file
                    await UploadStreamAsync(stream, "camera_capture.jpg");
                }
            }
        }
        catch (Exception ex)
        {
            message = $"Camera Error: {ex.Message}";
        }
    }

    private async Task UploadStreamAsync(Stream imageStream, string fileName)
    {
        isUploading = true;
        uploadStatusMessage = "Uploading image to server...";
        message = string.Empty;

        try
        {
            using var content = new MultipartFormDataContent();
            var streamContent = new StreamContent(imageStream);
            content.Add(streamContent, "file", fileName);

            var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                if (result != null)
                {
                    newCourse.ImageUrl = result.FileName;
                    uploadStatusMessage = "";
                    message = "Image uploaded successfully!";
                }
            }
            else
            {
                message = $"Error: File upload failed. {response.ReasonPhrase}";
                uploadStatusMessage = "";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            uploadStatusMessage = "";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task SaveCourse()
    {
        isSubmitting = true;
        message = string.Empty;
        try
        {
            if (string.IsNullOrEmpty(newCourse.ImageUrl) && selectedFile != null)
            {
                message = "Error: Please wait for file to finish uploading or re-select file.";
                isSubmitting = false;
                return;
            }
            var response = await Http.PostAsJsonAsync($"{ApiBaseUrl}/api/courses", newCourse);
            if (response.IsSuccessStatusCode)
            {
                message = "Course successfully added!";
                newCourse = new AddCourseDTO();
                selectedFile = null;
                Nav.NavigateTo("/");
            }
            else
            {
                message = $"Error: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            message = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void GoBack()
    {
        Nav.NavigateTo("/");
    }
}