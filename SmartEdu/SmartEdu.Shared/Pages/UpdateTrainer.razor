@page "/updatetrainer/{id:int}"
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@using System.Net.Http.Json
@using SmartEdu.Shared.Models
@using SmartEdu.Shared.DTO
@using SmartEdu.Shared.Services
@using System.IO
@using System.Net.Http.Headers

@inject HttpClient Http
@inject NavigationManager Nav
@inject ICameraService CameraService
@inject ILocationService LocationService

<div class="hero-section">
    <h1 class="system-title">SmartEdu</h1>
    <p class="system-subtitle">Hybrid Learning Management System for Modern Education</p>
</div>

@if (trainer == null)
{
    <p>Loading...</p>
}
else
{
      <div class="form-card">
        <h2 class="form-title">Edit Trainer</h2>
        <EditForm Model="trainer" OnValidSubmit="HandleUpdate">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <div class="form-group">
                <label>Name</label>
                <InputText @bind-Value="trainer.Name" class="form-control" />
            </div>

            <div class="form-group">
                <label>Email</label>
                <InputText @bind-Value="trainer.Email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Phone Number</label>
                <InputText @bind-Value="trainer.Phone" class="form-control" />
            </div>

            <div class="form-group">
                <label>Address</label>
                <div class="input-icon-container">
                    <InputText @bind-Value="trainer.Address" class="form-control" placeholder="Enter address or click pin" />

                    <button type="button" class="btn-inside-input" @onclick="GetCurrentLocation" title="Get Current Location">
                        <i class="bi bi-geo-alt-fill"></i> 📍Get Location
                    </button>
                </div>
                @if (!string.IsNullOrEmpty(locationStatus))
                {
                    <small style="color: #ffc107; margin-top: 5px; font-style: italic;">@locationStatus</small>
                }
            </div>

            <div class="form-group">
                <label>Trainer Image</label>

                <div class="trainer-image-container" style="margin-bottom: 10px; background-color: #f0f0f0; border-radius: 8px; overflow: hidden; width: 100%; height: 200px; display: flex; align-items: center; justify-content: center;">
                    @if (!string.IsNullOrEmpty(trainer.ImageUrl))
                    {
                        <img src="@($"{ApiBaseUrl}/Uploads/{trainer.ImageUrl}")"
                             alt="Preview"
                             style="width: 100%; height: 100%; object-fit: cover;"
                             @onerror="e => trainer.ImageUrl = null" />
                    }
                    else
                    {
                        <span style="color: #999; font-style: italic;">No Image</span>
                    }
                </div>

                <div class="action-grid">
                    <label class="btn-action-white">
                        <i class="bi bi-folder2-open" style="margin-right: 8px;"></i>Choose File
                        <InputFile OnChange="HandleFileSelected" style="display: none;" />
                    </label>

                    <button type="button" class="btn-action-white" @onclick="HandleCameraCapture">
                        <i class="bi bi-camera" style="margin-right: 8px;"></i>Camera
                    </button>
                </div>

                @if (isUploading)
                {
                    <p style="color: blue; font-size: 0.9rem; margin-top: 5px;">Uploading image...</p>
                }
            </div>

            <button type="submit" class="btn-primary">Update</button>
            <button type="button" class="btn-cancel" @onclick="BackToHome">Cancel</button>

            </EditForm>
    </div>
}

@code {
    [Parameter]
    public int id { get; set; }
    private Trainer? trainer;

    private bool isUploading = false;
    private bool isSubmitting = false;
    private string? message;
    private string uploadStatusMessage = "";
    private string locationStatus = "";


    private string ApiBaseUrl = "https://localhost:7194";
    private IBrowserFile? selectedFile;

    private class UploadResult
    {
        public string FileName { get; set; }
    }

    protected override async Task OnInitializedAsync()
    {
        trainer = await Http.GetFromJsonAsync<Trainer>($"api/Trainers/{id}");
    }

    private async Task GetCurrentLocation()
    {
        try
        {
            locationStatus = "Getting location...";
            // Panggil service lokasi
            var address = await LocationService.GetCurrentAddressAsync();

            if (!string.IsNullOrEmpty(address) && trainer != null)
            {
                trainer.Address = address; // Update alamat di model trainer
                locationStatus = "Location found!";
            }
            else
            {
                locationStatus = "Unable to get location/address.";
            }
        }
        catch (Exception ex)
        {
            locationStatus = $"Error: {ex.Message}";
        }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        isUploading = true;
        message = string.Empty;
        selectedFile = e.File;

        if (selectedFile != null && trainer != null)
        {
            try
            {
                using var content = new MultipartFormDataContent();
                using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);

                content.Add(new StreamContent(fileStream), "file", selectedFile.Name);

                var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);

                if (response.IsSuccessStatusCode)
                {
                    var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                    if (result != null)
                    {
                        trainer.ImageUrl = result.FileName;
                        message = "New image uploaded successfully!";
                    }
                }
                else
                {
                    message = $"Error: Image upload failed. {response.ReasonPhrase}";
                }
            }
            catch (Exception ex)
            {
                message = $"Error: {ex.Message}";
            }
            finally
            {
                isUploading = false;
            }
        }
    }

    private async Task HandleCameraCapture()
    {
        try
        {
            var photoResult = await CameraService.TakePhotoAsync();
            if (photoResult != null)
            {
                Stream stream;
                if (photoResult.StartsWith("data:image"))
                {
                    var base64Data = photoResult.Split(',')[1];
                    var bytes = Convert.FromBase64String(base64Data);
                    stream = new MemoryStream(bytes);
                }
                else
                {
                    stream = File.OpenRead(photoResult);
                }

                using (stream)
                {
                    await UploadStreamAsync(stream, "camera_capture.jpg");
                }
            }
        }
        catch (Exception ex)
        {
            message = $"Camera Error: {ex.Message}";
        }
    }

    private async Task UploadStreamAsync(Stream imageStream, string fileName)
    {
        isUploading = true;
        uploadStatusMessage = "Uploading image to server...";
        message = string.Empty;

        try
        {
            using var content = new MultipartFormDataContent();
            var streamContent = new StreamContent(imageStream);
            content.Add(streamContent, "file", fileName);

            var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);
            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                if (result != null)
                {
                    // Update model course yang sedang diedit
                    trainer.ImageUrl = result.FileName;

                    uploadStatusMessage = "";
                    message = "Image uploaded successfully from Camera!";
                }
            }
            else
            {
                message = $"Error: File upload failed. {response.ReasonPhrase}";
                uploadStatusMessage = "";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
            uploadStatusMessage = "";
        }
        finally
        {
            isUploading = false;
        }
    }

    private async Task HandleUpdate()
    {
        isSubmitting = true;
        message = string.Empty;
        if(isUploading)
        {
            message = "Please wait for the image upload to complete.";
            isSubmitting = false;
            return;
        }
        try
        {
            if (trainer != null)
            {
                var response = await Http.PutAsJsonAsync($"api/Trainers/{id}", trainer);
                if (response.IsSuccessStatusCode)
                {
                    Nav.NavigateTo("/trainers");
                }
                else
                {
                    Console.WriteLine("Error updating trainer: " + response.ReasonPhrase);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine("Exception updating trainer: " + ex.Message);
        }
        finally
        {
            isSubmitting = false;
        }
    }
    private void BackToHome()
    {
        Nav.NavigateTo("/trainers");
    }
}
