@page "/addtrainer"
@using System.Net.Http.Json
@using SmartEdu.Shared.Models
@using SmartEdu.Shared.DTO
@inject HttpClient Http
@inject NavigationManager Nav
@using System.Net.Http.Headers

<div class="hero-section">
    <h1 class="system-title">SmartEdu</h1>
    <p class="system-subtitle">Hybrid Learning Management System for Modern Education</p>
</div>

<div class="form-card">
    <h2 class="form-title">Add New Trainer</h2>

    <EditForm Model="@newTrainer" FormName="AddTrainerForm">
        <div class="form-group">
            <label>Full Name</label>
            <input type="text" class="form-input" placeholder="Enter Full Name" @bind="newTrainer.Name" />
        </div>

        <div class="form-group">
            <label>Email</label>
            <input type="email" class="form-input" placeholder="Enter email address" @bind="newTrainer.Email" />
        </div>

        <div class="form-group">
            <label>Phone Number</label>
            <input type="text" class="form-input" placeholder="Enter phone number" @bind="newTrainer.Phone" />
        </div>

        <div class="form-group">
            <label>Image</label>
            <InputFile OnChange="HandleFileSelected" class="form-input" />
        </div>

        <button class="submit-btn" @onclick="SaveTrainer" disabled="@isSubmitting">
            @(isSubmitting ? "Submitting..." : "Submit")
        </button>
        @if (!string.IsNullOrEmpty(message))
        {
            <p class="form-message">@message</p>
        }
    </EditForm>
</div>

@code{
    private AddTrainerDTO newTrainer = new();
    private bool isSubmitting = false;
    private string? message;
    private IBrowserFile? selectedFile;

    private string ApiBaseUrl = "https://localhost:7194";
    public class UploadResult
    {
        public string FileName { get; set; }
    }

    private async Task HandleFileSelected(InputFileChangeEventArgs e)
    {
        isSubmitting = true;
        message = "uploading..."; 
        selectedFile = e.File;

        try
        {
            using var content = new MultipartFormDataContent();
            using var fileStream = selectedFile.OpenReadStream(maxAllowedSize: 10 * 1024 * 1024);

            content.Add(new StreamContent(fileStream), "file", selectedFile.Name);

            var response = await Http.PostAsync($"{ApiBaseUrl}/api/File/upload", content);

            if (response.IsSuccessStatusCode)
            {
                var result = await response.Content.ReadFromJsonAsync<UploadResult>();
                if (result != null)
                {
                    newTrainer.ImageUrl = result.FileName;
                    message = "File uploaded successfully: " + result.FileName;
                }
            }
            else
            {
                message = $"Error: File upload failed. {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            message = $"Error: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private async Task SaveTrainer()
    {
        isSubmitting = true;
        message = string.Empty;
        try
        {
            if (string.IsNullOrEmpty(newTrainer.ImageUrl) && selectedFile != null)
            {
                message = "Error: Please wait for file to finish uploading or re-select file.";
                isSubmitting = false;
                return;
            }
            var response = await Http.PostAsJsonAsync($"{ApiBaseUrl}/api/trainers", newTrainer);
            if (response.IsSuccessStatusCode)
            {
                message = "Course successfully added!";
                newTrainer = new AddTrainerDTO();
                Nav.NavigateTo("/");
            }
            else
            {
                message = $"Error: {response.ReasonPhrase}";
            }
        }
        catch (Exception ex)
        {
            message = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }
}

